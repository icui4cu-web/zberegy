---
import Layout from "@layouts/Layout.astro";
import Breadcrumbs from "@components/Breadcrumbs/Breadcrumbs.astro";
import News from "@components/News/News.astro";
import AdjacentNavigation from "@components/AdjacentNavigation/AdjacentNavigation.astro";
---

<Layout class="news-page">
	<Breadcrumbs
		list={[{ href: "/news", text: "Новини" }, { text: "Як вшанувати пам'ять рідної людини" }]}
	/>
	<News />
	<AdjacentNavigation
		class="news-page__navigation container-sm"
		prev="/news/prev-page.html"
		next="/news/next-page.html"
	/>

	<link rel="stylesheet" href="/assets/css/glightbox.min.css" slot="head" />
	<script src="/assets/js/glightbox.min.js" slot="scripts" is:inline></script>
</Layout>
