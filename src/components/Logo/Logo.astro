---
import "./logo.scss";

interface Props {
	class?: string;
}

const { class: className } = Astro.props;
const Tag = Astro.url.pathname === "/homepage" ? "div" : "a";
const href = Tag === "a" ? "/" : undefined;
---

<Tag class:list={[className, "logo"]} {href}>
	<img
		class="logo__img"
		src="/assets/img/logo.svg"
		alt="Збережи — Онлайн Меморіал"
		width="209"
		height="50"
	/>
</Tag>
