---
import Icon from "@components/Icon/Icon.astro";
import "./search.scss";

const { class: className } = Astro.props;
---

<search class:list={[className, "search"]}>
	<Icon class="search__icon" id="search" />
	<input
		class="search__field"
		type="search"
		placeholder="Пошук меморіалів"
		minlength="2"
	/>
</search>
